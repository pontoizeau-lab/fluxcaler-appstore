{
  "schemaVersion": 2,
  "services": [
    {
      "name": "fluxcaler-n8n-staging",
      "image": "n8nio/n8n:latest",
      "internalPort": 5678,
      "isMain": true,
      "environment": {
        "N8N_PORT": "5678",
        "N8N_PROTOCOL": "http",
        "WEBHOOK_URL": "http://localhost:5681/",
        "N8N_DIAGNOSTICS_ENABLED": "false",
        "GENERIC_TIMEZONE": "${TZ}",
        "TZ": "${TZ}"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/n8n_staging",
          "containerPath": "/home/node/.n8n"
        }
      ],
      "healthCheck": {
        "test": "wget --no-verbose --tries=1 --spider http://localhost:5678/healthz || exit 1",
        "interval": "30s",
        "timeout": "10s",
        "retries": 3
      },
      "addPorts": [
        {
          "containerPort": 5678,
          "hostPort": 5681,
          "protocol": "tcp"
        }
      ]
    }
  ]
}
